<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_48dp"
        layout="@layout/title_layou"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_financial_list_one"
            android:layout_width="match_parent"
            android:layout_height="@dimen/diment_45dp"
            android:paddingLeft="@dimen/diment_10dp"
            android:paddingRight="@dimen/diment_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="金融列表1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/more_right" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/diment_0.5dp"
            android:background="@color/color_e4e4e4" />

        <RelativeLayout
            android:id="@+id/rl_financial_list_two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/diment_45dp"
            android:paddingLeft="@dimen/diment_10dp"
            android:paddingRight="@dimen/diment_10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金融列表2"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/more_right"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/diment_0.5dp"
            android:background="@color/color_e4e4e4" />

    </LinearLayout>>

</LinearLayout>