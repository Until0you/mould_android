<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/diment_80dp"
    android:padding="@dimen/diment_10dp">

    <ImageView
        android:id="@+id/iv_content_icon"
        android:layout_width="@dimen/diment_80dp"
        android:layout_height="@dimen/diment_80dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_content_icon"
        android:text="疯狂动物城"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/iv_content_icon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_content_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="作者" />

        <TextView
            android:id="@+id/tv_content_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="评论" />

        <TextView
            android:id="@+id/tv_content_reading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="阅读" />

    </LinearLayout>

</RelativeLayout>