<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/diment_10dp"
    android:paddingBottom="@dimen/diment_10dp"
    android:paddingLeft="@dimen/diment_20dp"
    android:paddingRight="@dimen/diment_20dp"
    android:background="@color/color_ffffff">

    <TextView
        android:id="@+id/message_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textSize="@dimen/diment_18sp"/>

    <TextView
        android:id="@+id/message_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_item_title"
        android:text="内容"/>

</RelativeLayout>