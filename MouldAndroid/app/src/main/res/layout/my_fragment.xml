<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_eeeeee">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_48dp"
        layout="@layout/title_layou"/>

    <RelativeLayout
        android:id="@+id/my_personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/color_ffffff">

        <com.mouldandroid.custom.view.RoundImageView
            android:id="@+id/user_head_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_my_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="渣渣辉"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_head_portrait"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_right"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:background="@color/color_e4e4e4" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_13dp"
        android:background="@color/color_eeeeee" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:background="@color/color_e4e4e4" />

    <RelativeLayout
        android:id="@+id/my_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_45dp"
        android:clickable="true"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/diment_20dp"
        android:paddingRight="@dimen/diment_20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="设置" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_right" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:background="@color/color_e4e4e4" />

    <RelativeLayout
        android:id="@+id/my_loing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_45dp"
        android:clickable="true"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/diment_20dp"
        android:paddingRight="@dimen/diment_20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="登录" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/more_right" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:background="@color/color_e4e4e4" />

</LinearLayout>