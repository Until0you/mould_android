<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_eeeeee">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_48dp"
        layout="@layout/title_layou"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_10dp"
        android:background="@color/color_eeeeee" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:background="@color/color_e4e4e4" />

    <RelativeLayout
        android:id="@+id/my_settings_invite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_45dp"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/diment_20dp"
        android:paddingRight="@dimen/diment_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请好友"
            android:textColor="@color/color_000000"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/more_right"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:background="@color/color_e4e4e4" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:background="@color/color_e4e4e4"
        android:layout_marginTop="@dimen/diment_50dp"/>

    <RelativeLayout
        android:id="@+id/my_settings_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_45dp"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/diment_20dp"
        android:paddingRight="@dimen/diment_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助与反馈"
            android:textColor="@color/color_000000"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/more_right"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:background="@color/color_e4e4e4" />

    <RelativeLayout
        android:id="@+id/my_settings_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_45dp"
        android:background="@color/color_ffffff"
        android:paddingLeft="@dimen/diment_20dp"
        android:paddingRight="@dimen/diment_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:layout_centerVertical="true"
            android:textColor="@color/color_000000"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/more_right"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:background="@color/color_e4e4e4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_0.5dp"
        android:layout_marginTop="@dimen/diment_20dp"
        android:background="@color/color_e4e4e4" />

    <RelativeLayout
        android:id="@+id/my_exit_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diment_45dp"
        android:background="@color/color_ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textSize="@dimen/diment_16sp"
            android:textColor="@color/color_ea4455"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>