<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/diment_42dp"
    android:background="@color/color_333333">

    <ImageView
        android:id="@+id/iv_back_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:paddingLeft="@dimen/diment_17dp"
        android:paddingRight="@dimen/diment_17dp"
        android:src="@mipmap/icon_back" />

    <TextView
        android:id="@+id/tv_title_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="Mould"
        android:textColor="@android:color/white"
        android:textSize="@dimen/diment_20sp" />

    <TextView
        android:id="@+id/tv_save_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:text="管理"
        android:gravity="center"
        android:textSize="@dimen/diment_16sp"
        android:textColor="@color/color_ffffff"
        android:paddingLeft="@dimen/diment_17dp"
        android:paddingRight="@dimen/diment_15dp"/>

</RelativeLayout>